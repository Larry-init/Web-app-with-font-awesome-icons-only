pipeline {

    agent {
        dockerfile {
            dir 'jenkins'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    stages {
        stage("find out"){
            steps{
                echo "find out"
                sh "pwd && ls -lart"
            }
        }
        stage("Dockerize the project"){
            steps{
                sh 'docker run'
            }
        }
        
    }

    post {
        always {
                script{
                sh "ls -lart"
                sh "chmod 775 ./py/run.sh"
                sh "py/run.sh"
            }
                slackSend channel: '#general', message: 'Hello Work'
                slackUploadFile 'py/log.html'
        }
    }

    
}
